<!-- required -->

<form>

    <label for="name">Name</label>
    <input type="text" placeholder="abc" required="Name">
    <br><br>
    <label for="email">Email</label>
    <input type="email" placeholder="abc***@gmail.com" required="email">
    <br><br>
    <input type="Submit" value="Submit">
    <br><br>
    <hr>
    <hr>
</form>

<!-- minimum age 18 -->


<form>

    <label for="age">Age</label>
    <input type="number" placeholder="18" min="18">
    <br><br>
    <label for="email">Email</label>
